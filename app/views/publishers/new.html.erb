<% provide(:title, 'Register') %>
<h1><%= yield(:title) %></h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@publisher) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>

            <h2> Organization </h2>

            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>

            <br />
            <%= f.fields_for :users do |builder| %>
                <h2> You: Team Lead </h2>
                <%= builder.label :name, "Full Name" %>
                <%= builder.text_field :name, class: 'form-control' %>

                <%= builder.label :email %>
                <%= builder.email_field :email, class: 'form-control' %>

                <%= builder.label :password %>
                <%= builder.password_field :password, class: 'form-control' %>

                <%= builder.label :password_confirmation, "Confirmation" %>
                <%= builder.password_field :password_confirmation, class: 'form-control' %>
            <% end %>

            <%= f.fields_for :sites do |builder| %>
                <h2> Websites: The Locations Of Your Publisher's Content </h2>
                <%= builder.label :name, "Website Name" %>
                <%= builder.text_field :name, class: 'form-control' %>

                <%= builder.label :URL %>
                <%= builder.text_field :url, class: 'form-control' %>

            <% end %>
            <%= f.submit "Register Organization", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
