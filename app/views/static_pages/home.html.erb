<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="proposal_form">
        <%= render 'shared/proposal_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Proposal Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
      <h1>Co Lab</h1>
      <h2>Guess what? This is the home page.</h2>
      <p>
          Hello, World! <br \>
          Lots of text here.
      </p>
      <%= link_to "Register Your Organization To Join The Platform", register_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("problems-xkcd.png", alt: "Funny comics"),
  'http://xkcd.com/' %>
<% end %>
